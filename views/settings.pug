doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title 360 Backend
    link(href='/useradmin/css/bootstrap.min.css', rel='stylesheet')
    link(href='/useradmin/font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='/useradmin/css/plugins/iCheck/custom.css', rel='stylesheet')
    link(href='/useradmin/css/animate.css', rel='stylesheet')
    link(href='/useradmin/css/style.css', rel='stylesheet')
    link(href='/useradmin/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css', rel='stylesheet')
  body
    #wrapper
      nav.navbar-default.navbar-static-side(role='navigation')
        .sidebar-collapse
          ul#side-menu.nav.metismenu
            li.nav-header
              a(href='/home')
                .dropdown.profile-element
                  h1(style='color: #fff; font-weight: 700; text-align: center;') 360
                .logo-element
                  | 360
            li
              a(href='#')
                i.fa.fa-building
                span.nav-label Property Upload
                span.fa.arrow
              ul.nav.nav-second-level.collapse
                li
                  a(href='/admin/properties') List Property
                li
                  a(href='/admin/propertytypes') Property Type
                li
                  a(href='/admin/tags') Search Tags
                li
                  a(href='/admin/amenities') Amenities
            li
              a(href='/admin/vrupload')
                i.fa.fa-tripadvisor
                span.nav-label VR Upload
            li
              a(href='/admin/blog')
                i.fa.fa-rss-square
                span.nav-label Blog
            li
              a(href='#')
                i.fa.fa-search-plus
                span.nav-label Enquiries
                span.fa.arrow
              ul.nav.nav-second-level.collapse
                li
                  a(href='/admin/propertyenquiry') Customer Enquiries
                li
                  a(href='/admin/shootenquiry') 360 shoot Enquiries
            li
              a(href='/admin/users')
                i.fa.fa-user
                span.nav-label Admin Accounts
            li
              a(href='#')
                i.fa.fa-files-o
                span.nav-label Others
                span.fa.arrow
              ul.nav.nav-second-level.collapse
                li
                  a(href='/admin/social') Social
                li
                  a(href='/admin/terms') T & C
            li
              a(href='/admin/settings')
                i.fa.fa-cog
                span.nav-label Settings
      #page-wrapper.gray-bg
        .row.border-bottom
          nav.navbar.navbar-static-top(role='navigation', style='margin-bottom: 0')
            .navbar-header
              a.navbar-minimalize.minimalize-styl-2.btn.btn-primary(href='#')
                i.fa.fa-bars
            ul.nav.navbar-top-links.navbar-right
              li
                a(href='/admin/login')
                  i.fa.fa-sign-out
                  |  Log out
        .row.wrapper.border-bottom.white-bg.page-heading
          .col-lg-10
            h2
              strong Edit Settings
            ol.breadcrumb
              li.breadcrumb-item
                a Home
              li.breadcrumb-item.active
                strong Settings
        .row
          .col-lg-12
            .ibox
              .ibox-title
                h5
                  strong Settings Info:
              .ibox-content
                form#fileUploadForm(action='javascript:void(0)', enctype='multipart/form-data')
                  .form-group.row
                    label.col-sm-2.col-form-label Site Name:
                    .col-sm-10
                      input#site_name.form-control(name='sitename', type='text', placeholder='Enter Name')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Logo:
                    #site_logo.col-sm-10
                      input.form-control(name='sitelogo', type='file')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label FavIcon:
                    #favicon_logo.col-sm-10
                      input.form-control(type='file', name='favicon')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Admin Logo:
                    #admin_logo.col-sm-10
                      input.form-control(type='file', name='adminlogo')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Admin Email:
                    .col-sm-10
                      input#admin_email.form-control(type='email', name='adminemail', placeholder='Email Address')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Site Url:
                    .col-sm-10
                      input#site_url.form-control(type='text', name='siteurl', placeholder='Enter Site Url')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Contact Page Meta Title:
                    .col-sm-10
                      input#contact_meta_title.form-control(type='text', name='metaContactTitle', placeholder='Enter Meta Title')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Contact Page Meta Description:
                    .col-sm-10
                      input#contact_meta_description.form-control(type='text', name='metaContactDescription', placeholder='Enter Meta Description')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Home Page Meta Description:
                    .col-sm-10
                      input#home_meta_title.form-control(type='text', name='metaHomeTitle', placeholder='Enter Meta Title')
                  .hr-line-dashed
                  .form-group.row
                    label.col-sm-2.col-form-label Home Page Meta Description:
                    .col-sm-10
                      input#home_meta_description.form-control(type='text', name='metaHomeDescription', placeholder='Enter Meta Description')
                  .hr-line-dashed
                  .form-group.row
                    .col-sm-4.col-sm-offset-2
                      button#form_submit_button.btn.btn-primary.btn-sm(onclick='saveSettingsChanges()', type='submit') Save changes
                      button.btn.btn-white.btn-sm(type='reset', onclick='this.form.reset()') Cancel
                #alert_placeholder
    // Mainly scripts
    script(src='/useradmin/js/jquery-3.1.1.min.js')
    script(src='/useradmin/js/popper.min.js')
    script(src='/useradmin/js/bootstrap.js')
    script(src='/useradmin/js/plugins/metisMenu/jquery.metisMenu.js')
    script(src='/useradmin/js/plugins/slimscroll/jquery.slimscroll.min.js')
    // Custom and plugin javascript
    script(src='/useradmin/js/inspinia.js')
    script(src='/useradmin/js/plugins/pace/pace.min.js')
    // iCheck
    script(src='/useradmin/js/plugins/iCheck/icheck.min.js')
    script(src='/useradmin/settings/read.js')
